        <data>

            <!-- Code for Food Intolerance -->
            <record id="view_hotel_intolerance_tree" model="ir.ui.view">
                <field name="name">hotel.intolerance.tree</field>
                <field name="model">hotel.intolerance</field>
                <field name="arch" type="xml">
                    <tree string="Food Intolerance Type" color="BLUE">
                        <field name="name"/>
                        <field name="intolerance"/>
                    </tree>
                </field>
            </record>

            <record id="view_hotel_intolerance_form" model="ir.ui.view">
                <field name="name">hotel.intolerance.form</field>
                <field name="model">hotel.intolerance</field>
                <field name="arch" type="xml">
                    <form string="Food Intolerance Type" version="7.0">
                        <sheet>
                            <group>
                                <field name="name"/>
                                <field name="intolerance"/>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <record id="action_intolerance_type" model="ir.actions.act_window">
                <field name="name">Food Intolerance Types</field>
                <field name="res_model">hotel.intolerance</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
                <field name="search_view_id" eval="False"/>
                <field name="context">{}</field>
                <field name="help" type="html">
                    <p class="oe_view_nocontent_create">
                         Click to add Food Intolerance and their Description
                    </p>
                </field>
            </record>


            <menuitem id="menu_food_base" parent="menu_view_medical" sequence="1" name="Food Intolerance" action="action_intolerance_type"/>
